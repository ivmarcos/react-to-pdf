{
  "name": "react-to-pdf",
  "version": "2.0.0",
  "description": "Create PDF documents from React Components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "keywords": [
    "pdf",
    "react",
    "convert"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivmarcos/react-to-pdf.git"
  },
  "author": "Marcos Andrei Ivanechtchuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivmarcos/react-to-pdf/issues"
  },
  "homepage": "https://github.com/ivmarcos/react-to-pdf#readme",
  "scripts": {
    "start": "vite",
    "build": "node scripts/build && rollup -c",
    "clean": "rimraf dist",
    "docs": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts src/types.ts src/constants.ts",
    "test": "npm run lint && vitest run",
    "lint": "eslint . && prettier -c .",
    "release": "release-it",
    "prerelease": "npm run clean && npm run build",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.3.4",
    "canvas": "^3.1.0",
    "compare-pdf": "^1.1.8",
    "cypress": "^13.1.0",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "jsdom": "^26.0.0",
    "prettier": "^2.8.4",
    "process": "^0.11.10",
    "react": "^16.8",
    "react-dom": "^16.8",
    "react-test-renderer": "^16.14.0",
    "release-it": "^18.1.2",
    "rimraf": "^5.0.0",
    "rollup-plugin-dts": "^6.2.1",
    "typedoc": "^0.24.4",
    "typedoc-plugin-markdown": "^3.15.2",
    "typescript": ">=3.0.0",
    "vite": "^6.2.3",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
