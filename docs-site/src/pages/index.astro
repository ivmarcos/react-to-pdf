---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/Button.astro';
import Card from '@components/Card.astro';
import CodeBlock from '@components/CodeBlock.astro';

const features = [
  {
    title: 'Simple to Use',
    description: 'Generate PDFs with a single line of code. No complex configuration required.',
    icon: '‚ö°',
  },
  {
    title: 'React-First',
    description: 'Use familiar React components and hooks. Style with CSS, Tailwind, or any CSS framework.',
    icon: '‚öõÔ∏è',
  },
  {
    title: 'Multi-Page Support',
    description: 'Automatically handles page breaks for long content. Perfect for reports and documents.',
    icon: 'üìÑ',
  },
  {
    title: 'TypeScript Ready',
    description: 'Full TypeScript support with complete type definitions out of the box.',
    icon: 'üî∑',
  },
  {
    title: 'Customizable',
    description: 'Control page size, orientation, margins, headers, footers, and more.',
    icon: 'üé®',
  },
  {
    title: 'Performance',
    description: 'Optimized rendering with caching and canvas cleanup for large documents.',
    icon: 'üöÄ',
  },
];

const quickStartCode = `import { usePDF } from 'react-to-pdf';

function MyDocument() {
  const { targetRef, toPDF } = usePDF({
    filename: 'document.pdf'
  });

  return (
    <div>
      <button onClick={() => toPDF()}>
        Download PDF
      </button>

      <div ref={targetRef}>
        <h1>Hello PDF!</h1>
        <p>This content will be converted to PDF.</p>
      </div>
    </div>
  );
}`;
---

<BaseLayout
  title="React to PDF - Generate PDFs from React Components"
  description="Simple, powerful library to generate PDF documents from React components. TypeScript ready, multi-page support, fully customizable."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-primary-50 via-white to-accent-50 py-20 md:py-32">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
          </span>
          Version 2.1.0 is now available
        </div>

        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          Generate PDFs from<br />
          <span class="bg-gradient-to-r from-primary-600 to-accent-600 bg-clip-text text-transparent">
            React Components
          </span>
        </h1>

        <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto">
          Simple, powerful library to create PDF documents from your React components.
          TypeScript ready, multi-page support, fully customizable.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <Button href="/react-to-pdf/docs/getting-started" variant="primary" size="lg">
            Get Started ‚Üí
          </Button>
          <Button href="/react-to-pdf/playground" variant="secondary" size="lg">
            Try Playground
          </Button>
        </div>

        <div class="mt-12 flex flex-wrap justify-center gap-8 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            55 tests passing
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            48% code coverage
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            MIT License
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Start Code -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Quick Start
          </h2>
          <p class="text-lg text-gray-600">
            Get started in seconds with our simple API
          </p>
        </div>

        <CodeBlock code={quickStartCode} language="tsx" />

        <div class="mt-8 text-center">
          <a href="/react-to-pdf/docs/quick-start" class="text-primary-600 hover:text-primary-700 font-medium">
            View full quick start guide ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Everything you need
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Built with developer experience in mind. Powerful features that just work.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {features.map((feature) => (
          <Card>
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {feature.title}
            </h3>
            <p class="text-gray-600">
              {feature.description}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-primary-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Perfect for any use case
          </h2>
          <p class="text-lg text-gray-600">
            From invoices to reports, certificates to tickets
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="font-semibold text-lg mb-2">üìÑ Invoices & Receipts</h3>
            <p class="text-gray-600 text-sm mb-3">Generate professional invoices with your branding</p>
            <a href="/react-to-pdf/docs/examples/invoice" class="text-primary-600 text-sm font-medium">View example ‚Üí</a>
          </div>

          <div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="font-semibold text-lg mb-2">üéì Certificates</h3>
            <p class="text-gray-600 text-sm mb-3">Create beautiful certificates for courses and events</p>
            <a href="/react-to-pdf/docs/examples/certificate" class="text-primary-600 text-sm font-medium">View example ‚Üí</a>
          </div>

          <div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="font-semibold text-lg mb-2">üé´ Event Tickets</h3>
            <p class="text-gray-600 text-sm mb-3">Design custom tickets with QR codes and barcodes</p>
            <a href="/react-to-pdf/docs/examples/ticket" class="text-primary-600 text-sm font-medium">View example ‚Üí</a>
          </div>

          <div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="font-semibold text-lg mb-2">üìä Reports & Analytics</h3>
            <p class="text-gray-600 text-sm mb-3">Export data tables and charts to PDF format</p>
            <a href="/react-to-pdf/docs/examples/report" class="text-primary-600 text-sm font-medium">View example ‚Üí</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-primary-600 to-accent-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to get started?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Install react-to-pdf and start generating PDFs in minutes
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/react-to-pdf/docs/installation" variant="white" size="lg">
          Installation Guide ‚Üí
        </Button>
        <Button href="https://github.com/ivmarcos/react-to-pdf" variant="outline-white" size="lg">
          View on GitHub
