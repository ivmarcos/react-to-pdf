---
import { navigation } from '@utils/navigation';
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/react-to-pdf/" class="flex items-center gap-2 font-semibold text-gray-900 mb-4">
          <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="32" height="32" rx="6" fill="url(#gradient)" />
            <path d="M8 10h16v2H8zM8 15h16v2H8zM8 20h10v2H8z" fill="white" />
            <defs>
              <linearGradient id="gradient" x1="0" y1="0" x2="32" y2="32">
                <stop offset="0%" stop-color="rgb(14, 165, 233)" />
                <stop offset="100%" stop-color="rgb(217, 70, 239)" />
              </linearGradient>
            </defs>
          </svg>
          <span class="text-lg">React to PDF</span>
        </a>
        <p class="text-sm text-gray-600 max-w-md">
          Simple, powerful library to generate PDF documents from React components.
          TypeScript ready, multi-page support, fully customizable.
        </p>
        <div class="flex gap-4 mt-4">
          <a
            href="https://github.com/ivmarcos/react-to-pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-gray-700 transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
          </a>
          <a
            href="https://www.npmjs.com/package/react-to-pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-gray-700 transition-colors"
            aria-label="npm"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331zM10.665 10H12v2.667h-1.335V10z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Footer Links -->
      {navigation.footer.map((section) => (
        <div>
          <h3 class="font-semibold text-gray-900 mb-3">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href.startsWith('http') ? link.href : `/react-to-pdf${link.href}`}
                  class="text-sm text-gray-600 hover:text-gray-900 transition-colors"
                  target={link.href.startsWith('http') ? '_blank' : undefined}
                  rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-200 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-600">
        Â© {new Date().getFullYear()} React to PDF. Released under the MIT License.
      </p>
      <p class="text-sm text-gray-600">
        Built with <a href="https://astro.build" class="text-primary-600 hover:text-primary-700" target="_blank" rel="noopener noreferrer">Astro</a>
      </p>
    </div>
  </div>
</footer>
